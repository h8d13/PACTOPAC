{
  "gpu_drivers": {
    "amd": [
      "mesa",
      "lib32-mesa", 
      "vulkan-radeon",
      "lib32-vulkan-radeon",
      "vulkan-icd-loader",
      "lib32-vulkan-icd-loader",
      "libva-mesa-driver",
      "lib32-libva-mesa-driver",
      "mesa-vdpau",
      "lib32-mesa-vdpau"
    ],
    "intel": [
      "mesa",
      "lib32-mesa",
      "vulkan-intel",
      "lib32-vulkan-intel",
      "vulkan-icd-loader",
      "lib32-vulkan-icd-loader",
      "intel-media-driver",
      "libva-intel-driver",
      "libvdpau-va-gl"
    ],
    "nvidia": [
      "nvidia",
      "nvidia-utils",
      "lib32-nvidia-utils",
      "nvidia-settings",
      "libva-nvidia-driver",
      "vulkan-icd-loader",
      "lib32-vulkan-icd-loader"
    ]
  },
  "microcode": {
    "amd": "amd-ucode",
    "intel": "intel-ucode"
  },
  "power_management": {
    "laptop": "power-profiles-daemon",
    "desktop": "cpupower"
  },
  "virtualization": {
    "packages": [
      "qemu-system-x86",
      "qemu-img",
      "libvirt",
      "tigervnc"
    ],
    "post_install_commands": [
      "usermod -a -G kvm $USER",
      "systemctl enable libvirtd.service",
      "systemctl start libvirtd.service"
    ]
  }
}